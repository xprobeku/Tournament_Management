<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listPlayerItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorBlack" >

    <ImageView
        android:id="@+id/playerPortrait"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playerPortrait"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/playerPortrait"
        android:text="PLAYER 1"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/playerStanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playerPortrait"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/playerKingImage"
        android:text="0W 0L"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        />

    <ImageView
        android:id="@+id/playerKingImage"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignBaseline="@+id/playerPortrait"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:contentDescription="@android:drawable/alert_light_frame" />

</RelativeLayout>
